/* Private variables ---------------------------------------------------------*/

UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;

PCD_HandleTypeDef hpcd_USB_OTG_FS;

/* USER CODE BEGIN PV */
char rx_buffer2[100];  // Buffer for receiving data from UART3 (Computer B)
volatile int rx_index2 = 0;  // Index for rx_buffer2
volatile int message_received2 = 0;  // Flag for UART2's messages
char my_name[50];  // Stores Computer A's name
char other_name[50];  // Stores the name received from UART3
char tx_buffer[100];  // Buffer for transmitting data
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USB_OTG_FS_PCD_Init(void);
